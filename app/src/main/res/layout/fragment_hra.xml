<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/karta_ruka_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/karta_10c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/karta_ruka_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/karta_ruka_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/karta_10c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/karta_ruka_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/karta_ruka_1" />

        <ImageButton
            android:id="@+id/karta_ruka_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/karta_10c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/karta_ruka_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/karta_ruka_2" />

        <ImageButton
            android:id="@+id/karta_ruka_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"

            android:maxHeight="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/karta_10c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/karta_ruka_3" />

        <TextView
            android:id="@+id/vase_body_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Vaše body: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            app:chainUseRtl="false"
            app:layout_constraintEnd_toStartOf="@+id/protihracove_body_textView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/karty_kopa_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Karty na kope:"
            android:textSize="18sp"
            app:chainUseRtl="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zostava_kariet_textView" />

        <TextView
            android:id="@+id/zostava_kariet_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Zostáva 20 kariet"
            android:textSize="18sp"
            android:textStyle="bold"
            app:chainUseRtl="false"
            app:layout_constraintBottom_toTopOf="@+id/karty_kopa_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vase_body_textView" />

        <TextView
            android:id="@+id/protihracove_body_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Protihráčove body: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/vase_body_textView"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ber_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Ber"
            app:layout_constraintBottom_toTopOf="@+id/karta_ruka_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/karty_ruka_textView" />

        <TextView
            android:id="@+id/karty_ruka_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:text="Karty v ruke:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/karta_ruka_1"
            app:layout_constraintEnd_toStartOf="@+id/ber_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/karta_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"

            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/karta_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/karty_kopa_textView"
            app:srcCompat="@drawable/karta_10g" />

        <ImageView
            android:id="@+id/karta_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"

            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/karta_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/karta_1"
            app:layout_constraintTop_toBottomOf="@+id/karty_kopa_textView"
            app:srcCompat="@drawable/karta_10g" />

        <ImageView
            android:id="@+id/karta_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"

            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/karta_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/karta_2"
            app:layout_constraintTop_toBottomOf="@+id/karty_kopa_textView"
            app:srcCompat="@drawable/karta_10g" />

        <ImageView
            android:id="@+id/karta_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"

            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/karta_3"
            app:layout_constraintTop_toBottomOf="@+id/karty_kopa_textView"
            app:srcCompat="@drawable/karta_10g" />

        <ImageView
            android:id="@+id/karta_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:scaleType="fitCenter"

            app:layout_constraintBottom_toTopOf="@+id/karty_ruka_textView"
            app:layout_constraintEnd_toStartOf="@+id/karta_6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/karta_1"
            app:srcCompat="@drawable/karta_10g" />

        <ImageView
            android:id="@+id/karta_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:scaleType="fitCenter"

            app:layout_constraintBottom_toTopOf="@+id/karty_ruka_textView"
            app:layout_constraintEnd_toStartOf="@+id/karta_7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/karta_5"
            app:layout_constraintTop_toBottomOf="@+id/karta_2"
            app:srcCompat="@drawable/karta_10g" />

        <ImageView
            android:id="@+id/karta_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:scaleType="fitCenter"

            app:layout_constraintBottom_toTopOf="@+id/karty_ruka_textView"
            app:layout_constraintEnd_toStartOf="@+id/karta_8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/karta_6"
            app:layout_constraintTop_toBottomOf="@+id/karta_3"
            app:srcCompat="@drawable/karta_10g" />

        <ImageView
            android:id="@+id/karta_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:scaleType="fitCenter"

            app:layout_constraintBottom_toTopOf="@+id/karty_ruka_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/karta_7"
            app:layout_constraintTop_toBottomOf="@+id/karta_4"
            app:srcCompat="@drawable/karta_10g" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>