<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView

        android:layout_margin="10dp"
        android:id="@+id/image_view_smajlik"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smajlik_vyhral" />

    <TextView
        android:layout_marginStart="20dp"
        android:id="@+id/text_view_historia_ziskane_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="@string/ziskane_body"
        android:textStyle="bold"

        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toEndOf="@+id/image_view_smajlik"
        app:layout_constraintTop_toTopOf="@+id/image_view_smajlik" />

    <TextView
        android:layout_marginStart="20dp"

        android:id="@+id/text_view_historia_datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_smajlik"

        app:layout_constraintStart_toEndOf="@+id/image_view_smajlik" />

</androidx.constraintlayout.widget.ConstraintLayout>